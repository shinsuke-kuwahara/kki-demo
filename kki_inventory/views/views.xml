<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="kki_inventory.from">
            <field name="name">kki_inventory from</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="before">
                    <group>
                        <group>
                            <field name="memo" string="メモ"/>
                            <field name="note"/>
                            <field name="x_date"/>
                            <field name="x_time"/>
                        </group>
                        <group>
                            <field name="x_int"/>
                            <field name="x_float"/>
                            <field name="x_boolean"/>
                            <field name="x_slection"/>
                            <field name="x_m2o"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="kki_inventory.tree">
            <field name="name">kki_inventory tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="memo" string="メモ"/>
                    <field name="note"/>
                </xpath>
            </field>
        </record>


