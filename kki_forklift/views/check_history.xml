<odoo>
    <data>

        <record model="ir.ui.view" id="kki_forklift_history_form">
            <field name="name">kki_forklift history form</field>
            <field name="model">kki_forklift.history</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="check_date"/>
                                <field name="fork_1"/>
                                <field name="back_1"/>
                                <field name="chain_1"/>
                                <field name="mast_1"/>
                                <field name="tire_1"/>
                                <field name="handle_1"/>
                            </group>
                            <group>
                                <field name="image" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
